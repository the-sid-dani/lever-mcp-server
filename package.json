{
	"name": "lever-mcp-server",
	"version": "2.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "tsc",
		"start": "node dist/server.js",
		"dev": "tsx watch src/server.ts",
		"format": "biome format --write",
		"lint:fix": "biome lint --fix",
		"type-check": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"docker:build": "docker build -t lever-mcp .",
		"docker:run": "docker run -p 8080:8080 --env-file .env lever-mcp",
		"deploy": "gcloud builds submit --config cloudbuild.yaml",
		"proxy": "gcloud run services proxy lever-mcp --region=us-central1"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.25.0",
		"express": "^4.21.0",
		"jose": "^6.1.3",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"@types/express": "^5.0.0",
		"@types/node": "^24.0.10",
		"tsx": "^4.19.0",
		"typescript": "^5.8.3",
		"vitest": "^4.0.18"
	},
	"engines": {
		"node": ">=20"
	}
}
